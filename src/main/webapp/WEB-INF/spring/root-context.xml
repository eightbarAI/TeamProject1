	<!-- 여기에는 모든 곳에서 공통적으로 사용하는 bean을 등록하거나 설정을 한다. 주로 데이터베이스 관련된 설정을 한다. -->

	<!-- 데이터베이스 접속 정보 : MySQL -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName">
			<!-- MySQL 버전에 따라 cj.는 생략하거나 추가한다. -->
			<value>com.mysql.cj.jdbc.Driver</value>
		</property>
		<property name="url">
			<value>jdbc:mysql://localhost:3306/sqlex?useUnicode=yes&amp;characterEncoding=UTF-8&amp;serverTimezone=UTC
			</value>
		</property>
		<property name="username">
			<value>hyojae</value>
		</property>
		<property name="password">
			<value>1111</value>
		</property>
	</bean>


